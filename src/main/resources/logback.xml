<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%yellow([%d{HH:mm:ss.SSS}] [%thread/%-5level] [%logger{36}]:) %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.reflections.Reflections" level="OFF"/>
    <logger name="[R]:[KTOR]:[ExclusionRequestRateLimiter]" level="OFF"/>
    <logger name="io.ktor.util.random" level="OFF"/>

    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
